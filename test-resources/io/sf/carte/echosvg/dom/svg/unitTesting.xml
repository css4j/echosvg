<testSuite id="dom.svg.unitTesting"
           name="io.sf.carte.echosvg.dom.svg package - Unit Testing">

    <!-- ================================================================ -->
    <!-- cloneNode test                                                   -->
    <!-- ================================================================ -->
    <test id="dom.svg.cloneNode"
          class="io.sf.carte.echosvg.dom.svg.CloneNodeTest" >
        <arg class="java.lang.String"
             value="test-resources/io/sf/carte/echosvg/dom/svg/test.svg" />
        <arg class="java.lang.String" value="nodeID" />
    </test>

    <!-- ================================================================ -->
    <!-- importNode test                                                  -->
    <!-- ================================================================ -->
    <test id="dom.svg.importNode"
          class="io.sf.carte.echosvg.dom.svg.ImportNodeTest" >
        <arg class="java.lang.String"
             value="test-resources/io/sf/carte/echosvg/dom/svg/test.svg" />
        <arg class="java.lang.String" value="nodeID" />
    </test>

    <!-- ================================================================ -->
    <!-- Self contained tests                                             -->
    <!-- ================================================================ -->
    <testGroup id="dom.svg.basic" name="Basic SVG DOM Testing"
               class="io.sf.carte.echosvg.dom.svg.EcmaScriptSVGDOMTest">
        <test id="bug30580"/>
        <test id="lengthTest"/>
        <test id="locatableTest"/>
        <test id="presentationAttrRemovalTest"/>
    </testGroup>

    <!-- ================================================================ -->
    <!-- Supported Public IDs test                                        -->
    <!-- ================================================================ -->
    <test id="dom.svg.publicIds" 
          name="Checks that there are system ids for the supported public Ids"
          class="io.sf.carte.echosvg.anim.dom.SystemIdTest" />


</testSuite>
